---
import { Image } from "astro:assets";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";
import GradiantText from "../shared/GradiantText.astro";
import { ui, defaultLang, languages } from '../../i18n/ui';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';



const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);



const testimonials = ui[lang]?.testimonials || ui[defaultLang].testimonials;

type TestimonialProps = {
  title: string;
  items: [];
};




export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section id="testimonials" class={`${className}`}>
  <Container className="">
    <div class="text-center max-w-3xl mx-auto">
      <Title>
    <GradiantText>{t("testimonials.title")}</GradiantText>
      </Title>
    </div>
    <div class="flex flex-row flex-wrap mt-8">
      {
        testimonials.items.map((testimonial: TestimonialProps) => {
          return (
            <div class="flex flex-col items-center text-center basis-full md:basis-1/2 lg:basis-1/3 p-4">
              <Image src={testimonial.image} alt={testimonial.name} class="w-24 h-24 rounded-full mb-4" />
              <h3 class="text-heading-3 font-bold">{testimonial.name}</h3>
              <p class="text-body-2 text-gray-500">{testimonial.job}</p>
                <div class="flex items-center text-heading-3 font-medium basis-full md:basis-1/2 lg:basis-1/3">
            
              <p class="mt-4">{testimonial.content}</p>
              </div>
            </div>
          );
        })
      }
    </div>
  </Container>
</section>