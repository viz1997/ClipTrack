---
import { Image } from "astro:assets";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";
import GradiantText from "../shared/GradiantText.astro";
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { languages } from '../../i18n/config';


const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// 导入所有需要的图像
import image1 from "../../assets/images/user1.jpg";
import image2 from "../../assets/images/user2.jpg";
import image3 from "../../assets/images/user3.jpg";

type TestimonialProps = {
  name: string;
  position: string;
  content: string;
  image: string; // 这里改为导入的图像对象
};

const testimonials = [
  {
    name: "Emily Brown",
    position: t("say1.job"),
    content: t("say1.description"),
    image: image1, // 使用导入的图像对象
  },
  {
    name: "Sophia Chen",
    position: t("say2.job"),
    content: t("say2.description"),
    image: image2, // 使用导入的图像对象
  },
  {
    name: "John Doe",
    position: t("say3.job"),
    content: t("say3.description"),
    image: image3, // 使用导入的图像对象
  },
];

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section id="testimonials" class={`${className}`}>
  <Container className="">
    <div class="text-center max-w-3xl mx-auto">
      <Title>
    <GradiantText>{t("say.title")}</GradiantText>
      </Title>
    </div>
    <div class="flex flex-row flex-wrap mt-8">
      {
        testimonials.map((testimonial: TestimonialProps) => {
          return (
            <div class="flex flex-col items-center text-center basis-full md:basis-1/2 lg:basis-1/3 p-4">
              <Image src={testimonial.image} alt={testimonial.name} class="w-24 h-24 rounded-full mb-4" />
              <h3 class="text-heading-3 font-bold">{testimonial.name}</h3>
              <p class="text-body-2 text-gray-500">{testimonial.position}</p>
                <div class="flex items-center text-heading-3 font-medium basis-full md:basis-1/2 lg:basis-1/3">
            
              <p class="mt-4">{testimonial.content}</p>
              </div>
            </div>
          );
        })
      }
    </div>
  </Container>
</section>